---
import Svg from "@cxa/astro-inline-svg";
import logo from "@/assets/logo.svg?raw";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Home">
  <section class="hero dark">
    <Svg raw={logo} class="logo" data-animated />
  </section>

  <section>
    <div class="colors">
      <span class="color" style="background: var(--primary)"></span>
      <span class="color" style="background: var(--secondary)"></span>
      <span class="color" style="background: var(--white)"></span>
      <span class="color" style="background: var(--light-gray)"></span>
      <span class="color" style="background: var(--gray)"></span>
      <span class="color" style="background: var(--dark-gray)"></span>
      <span class="color" style="background: var(--black)"></span>
    </div>
  </section>
</Layout>

<style>
  .hero {
    --padding: 100px;
    background: radial-gradient(
      ellipse at top center,
      var(--dark-gray),
      var(--black)
    );
    color: var(--white);
  }

  .logo {
    height: 100px;
  }

  .colors {
    display: inline-flex;
    box-shadow: var(--box-shadow);
  }

  .color {
    width: 40px;
    height: 40px;
  }
</style>
